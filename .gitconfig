[user]
	name = Artsiom Balakir
	email = artsiombalakir@gmail.com
[core]
	autocrlf = input
	editor = "code --wait"
[color]
	ui = auto
[alias]
	go = checkout
	# pretty-log: nice formatted, dence log
	plog = log --pretty=format:'%C(yellow)%h%Cgreen %cr %C(cyan)%an %C(bold white)%s%C(red)%d %Creset'
	compare = diff @^
	# 'git github repo-nate' will clone from id below
	github = "!f() { git clone https://github.com/artsiom-svm/\"$1\"; }; f"
	amend = commit --amend --no-edit
[credential]
	helper = store
